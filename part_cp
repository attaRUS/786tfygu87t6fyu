    srcs = select({
        "//bazel:exclude_certificates": [],
        "//conditions:default": [
            "certificates.inc",
        ],
    }),
    copts = select({
        "//bazel:exclude_certificates": ["-DEXCLUDE_CERTIFICATES"],
        "//conditions:default": [],
    }),
    repository = "@envoy",
)
