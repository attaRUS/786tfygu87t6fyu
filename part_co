    name = "server_envoy_jni_lib",
    testonly = True,
    srcs = [
        "test_jni_impl.cc",
    ],
    linkopts = select({
        "@envoy//bazel:dbg_build": ["-Wl,--build-id=sha1"],
        "//conditions:default": [],
